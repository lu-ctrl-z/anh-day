<table class="table-detail" ng-cloak>
    <tr>
        <th>STT</th>
        <th>Tên hàng hóa, dịch vụ</th>
        <th>Đơn vị tính</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
    </tr>
    <tr class="mark">
        <th>(1)</th>
        <th>(2)</th>
        <th>(3)</th>
        <th>(4)</th>
        <th>(5)</th>
        <th>(6) = (4) x (5)</th>
    </tr>
    <tr class="rows" ng-repeat="cart in invoice.cartList">
        <td align="center" class="stt">
            {{$index+1}}
        </td>
        <td>
            <b>{{cart.name}} - {{cart.typeName}}</b>
        </td>
        <td align="center" style="width: 80px;">
            <b>{{cart.unit}}</b>
        </td>
        <td align="center" style="width: 70px;">
            <b>{{cart.quantity}}</b>
        </td>
        <td align="right" style="width: 80px;">
            <b>{{cart.price | number2Decimal}}</b>
        </td>
        <td align="right" class="money" style="width: 88px;">
           <b>{{intoMoney(cart) | number2Decimal}}</b>
        </td>
    </tr>
    <tr class="rows">
        <td class="addRelationRow" align="center"><a title="thêm" href="javascript:void(0);" ng-click="addRow();"><span class="glyphicons glyphicons-plus"></span></a></td>
        <td colspan="4" align="right">Cộng tiền hàng:</td>
        <td align="right" class="money">
           <b>{{invoice.totalPrice | number2Decimal}}</b>
        </td>
    </tr>
    <tr class="rows">
        <td colspan="5" align="right">Chiết khấu ({{percent()}}):</td>
        <td align="right">
            <b>{{invoice.totalDiscount | number2Decimal}}</b>
        </td>
    </tr>
    <tr class="rows">
        <td colspan="5" align="right">Tổng cộng tiền thanh toán:</td>
        <td align="right" class="money">
           <b>{{invoice.trueTotalPrice | number2Decimal}}</b>
        </td>
    </tr>
    <tr class="rows rowsLast">
        <td colspan="6">Số tiền viết bằng chữ: <b>{{readNumber(invoice.trueTotalPrice)}}</b></td>
    </tr>
</table>
