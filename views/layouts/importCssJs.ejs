<script type="text/javascript">
    $.extend(true, $.fn.dataTable.defaults, {
        "pagingType": "full_numbers",
        searching: false,
        drawCallback: function(settings) {
            var pagination = $(this).closest('.dataTables_wrapper').find('.dataTables_paginate');
            pagination.toggle(this.api().page.info().pages > 1);
            var paginationView = $(this).closest('.dataTables_wrapper').find('.dataTables_info');
            paginationView.toggle(this.api().page.info().recordsTotal > 0);

            var paginationButton = $(this).closest('.dataTables_wrapper').find('.paginate_button');
            $(paginationButton).each(function() {
                var text = $(this).text(), title = '';
                if (isNaN(text)) {
                    if (text == '<%-sails.__("dataTable.first")%>') {
                        title = 'Trang đầu';
                    }
                    if (text == '<%-sails.__("dataTable.last")%>') {
                        title = 'Trang cuối';
                    }
                    if (text == '<%-sails.__("dataTable.next")%>') {
                        title = 'Trang tiếp theo';
                    }
                    if (text == '<%-sails.__("dataTable.previous")%>') {
                        title = 'Trang trước';
                    }
                } else {
                    title = 'Trang ' + text;
                }
                $(this).attr('title', title);
            });
            
            $(this).closest('.dataTables_wrapper').find('.dataTables_paginate').find('.disabled, .active').find('a').removeAttr('href').removeAttr('tabindex');
        },
        language: {
            "sProcessing": "<%-sails.__('dataTable.processing')%>",
            "sLengthMenu": "<%-sails.__('dataTable.show')%> _MENU_ <%-sails.__('dataTable.entries')%>",
                                "sZeroRecords": "<%-sails.__('dataTable.emptyTable')%>",
                                "sEmptyTable": "<%-sails.__('dataTable.emptyTable')%>",
                                "sInfo": ["<%-sails.__('dataTable.total')%> _TOTAL_ <%-sails.__('dataTable.entries')%>, ",
                                    "<%-sails.__('dataTable.show')%> <%-sails.__('dataTable.from')%> ",
                                    "_START_ <%-sails.__('dataTable.to')%> _END_"
                                ].join(''),
                                "sInfoEmpty": ["<%-sails.__('dataTable.total')%> 0 <%-sails.__('dataTable.entries')%>,",
                                    "<%-sails.__('dataTable.show')%>  0 <%-sails.__('dataTable.to')%> 0"
                                ].join(''),
                                "sSearch": "<%-sails.__('dataTable.search')%>:",
                                "sInfoThousands": ",",
                                "sLoadingRecords": "<%-sails.__('dataTable.processing')%>",
                                "oPaginate": {
                                    "sFirst": "<%-sails.__('dataTable.first')%>",
                                    "sLast": "<%-sails.__('dataTable.last')%>",
                                    "sNext": "<%-sails.__('dataTable.next')%>",
                                    "sPrevious": "<%-sails.__('dataTable.previous')%>"
                                }
        }
    });
</script>